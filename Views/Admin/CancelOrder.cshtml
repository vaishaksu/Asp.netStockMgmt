@model StockManagement.Models.Item

@{
    ViewData["Title"] = "CancelOrder";
    Layout = "~/Views/Shared/_AdminHeader.cshtml";
}

<div>
    <link rel="stylesheet" href="~/css/customerMenu.css" type="text/css" />
    <link rel="stylesheet" href="~/css/Admin.css" type="text/css" />
    <div class="add-item-container bg-white p-3 mt-5">
        <h4 class="grey-color text-center">Are you sure you want to delete this?</h4>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @*@Html.DisplayNameFor(model => model.item_name)*@
                    Item Name
                </dt>
                <dd class="col-sm-10">
                    @*@Html.DisplayFor(model => model.item_name)*@
                    @Model.item_name
                </dd>
                <dt class="col-sm-2">
                    @*@Html.DisplayNameFor(model => model.seller_name)*@
                    Seller Name
                </dt>
                <dd class="col-sm-10">
                    @*@Html.DisplayFor(model => model.seller_name)*@
                    @Model.seller_name
                </dd>
                <dt class="col-sm-2">
                    @*@Html.DisplayNameFor(model => model.price)*@
                    Price
                </dt>
                <dd class="col-sm-10">
                    @*@Html.DisplayFor(model => model.price)*@
                    @Model.price.ToString("c")
                </dd>
                <dt class="col-sm-2">
                    @*@Html.DisplayNameFor(model => model.quantity)*@
                    Quantity
                </dt>
                <dd class="col-sm-10">
                    @*@Html.DisplayFor(model => model.quantity)*@
                    @Model.quantity
                </dd>
                <dt class="col-sm-2">
                    @*@Html.DisplayNameFor(model => model.in_stock)*@
                    In Stock
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.in_stock)
                </dd>
            </dl>

            <form asp-action="CancelOrder">
                <input type="submit" value="Cancel" class="btn btn-danger" />
                <a asp-action="ModifyUnProcessedOrder" class="btn btn-primary">Back to List</a>
            </form>
        </div>
    </div>
</div>

